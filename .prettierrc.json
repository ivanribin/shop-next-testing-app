{
    "printWidth": 80,
    "tabWidth": 4,
    "bracketSpacing": false,
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "auto",
    "bracketSameLine": true,
    "plugins": [
        "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
        "^[react]",
        "^./hooks",
        "^~/icons",
        "^@(?!/)",
        "^@/widgets",
        "^@/features",
        "^@/entities",
        "^@/shared",
        "^./ui",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}